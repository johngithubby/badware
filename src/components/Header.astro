---
import { SITE_TITLE } from "../consts";
import HeaderLink from "./HeaderLink.astro";
// Normalize the configured base so links work when the site is deployed under a subpath (e.g. /badware/)
let BASE_URL: string = import.meta.env.BASE_URL || "/";
if (!BASE_URL.endsWith("/")) BASE_URL += "/";
---

---

<header>
	<nav>
		<h2><a href={BASE_URL}>{SITE_TITLE}</a></h2>
		<div class="internal-links">
			<HeaderLink href={`${BASE_URL}blog`}>Blog</HeaderLink>
		</div>
	</nav>
</header>
<style>
	header {
		margin: 0;
		padding: 0 1em;
		background: white;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	nav {
		display: flex;
		align-items: center;
		gap: 1.5rem;
		max-width: 960px;
		margin: 0 auto;
		padding: 0.75rem 0;
	}
	h2 {
		margin: 0;
		font-size: 1.1rem;
		font-weight: 700;
	}
	h2 a,
	h2 a.active {
		text-decoration: none;
		color: var(--accent);
	}
	.internal-links {
		display: flex;
		align-items: center;
		gap: 1.25rem;
		margin-left: auto;
	}
	.internal-links a {
		text-decoration: none;
		font-weight: 500;
		padding: 0.25rem 0;
		position: relative;
	}
	.internal-links a.active::after {
		content: "";
		position: absolute;
		left: 0;
		bottom: -2px;
		height: 2px;
		width: 100%;
		background: var(--accent);
		border-radius: 1px;
	}
	@media (max-width: 720px) {
		nav {
			flex-wrap: wrap;
			gap: 0.75rem 1rem;
		}
		.internal-links {
			flex-basis: 100%;
			margin-left: 0;
		}
	}
</style>
